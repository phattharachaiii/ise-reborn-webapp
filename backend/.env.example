# 🌩️ Cloudinary configuration
CLOUDINARY_CLOUD_NAME=your_cloud_name_here
CLOUDINARY_API_KEY=123456789012345
CLOUDINARY_API_SECRET=your_cloudinary_secret
CLOUDINARY_UPLOAD_PRESET=default_upload_preset

# 🌐 API base URL (Frontend will call this)
VITE_API_BASE=https://api.example.com

# 📧 Allowed email domains for login/registration
ALLOWED_EMAIL_DOMAINS=gmail.com,yahoo.com,example.com

# 🔐 Authentication
JWT_SECRET=your_jwt_secret_key

# 🗄️ Database connection string
DATABASE_URL=postgresql://user:password@localhost:5432/your_database

# ⚙️ Environment mode
NODE_ENV=production

# 💻 Frontend origin (for CORS)
FE_ORIGIN=https://your-frontend-domain.com
